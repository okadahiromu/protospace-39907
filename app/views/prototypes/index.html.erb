<main class="main">
  <div class="inner">
    <%# ログインしているときは以下を表示する %>
    <% if user_signed_in? %>
      <div class="greeting">
        こんにちは、
        <span><%= link_to current_user.name, user_path(current_user) %></span>
          
            <ul class="user__info">
              <li>
                <%= link_to "", class: :greeting__link%>
              </li>
            </ul>
      </div> 
    <% end %>
    <%# // ログインしているときは上記を表示する %>
    <div class="card__wrapper">
      <%= render partial: "form" %>
      <%# 投稿機能実装後、部分テンプレートでプロトタイプ投稿一覧を表示する %>
      <% @prototypes.each do |prototype| %>
      <%= render partial: "prototype", locals: { prototype: prototype } %>
      <% end %>
    </div>
  </div>
</main>
